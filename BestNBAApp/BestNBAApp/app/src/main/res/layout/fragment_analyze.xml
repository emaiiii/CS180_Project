<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/other_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/refresh"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/positive_button"
        android:text="REFRESH"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statDisplay" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/negative_button"
        android:text="NEXT"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statDisplay" />

    <Button
        android:id="@+id/prevButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="122dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="122dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/neutral_button"
        android:text="PREV"
        android:textColor="@android:color/background_light"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statDisplay" />

    <TextView
        android:id="@+id/statDisplay"
        android:layout_width="350dp"
        android:layout_height="420dp"
        android:layout_marginBottom="29dp"
        android:layout_marginTop="24dp"
        android:text="DISPLAY AREA"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>